extends ../../layouts/main-layout.pug

block styles 
    link(rel="stylesheet", href="/css/forms.css")
    link(rel="stylesheet", href="/css/auth.css")

block content 
    main
        if errMessage
            div.user-message.user-message--error #{errMessage}
        

        form.login-form(action="/signup" method="POST" novalidate)
            .form-control
                label(for="name") Name
                input#name(type="text" name="name" value=oldInput('name'))
            .form-control
                label(for="email") E-mail
                input#email(type="email" name="email" value=oldInput('email'))
            .form-control
                label(for="password") Password
                input#password(type="password" name="password" value=oldInput('password'))
            .form-control
                label(for="cf_password") Confirm Password
                input#password(type="password" name="cf_password" value=oldInput('cf_password'))
            input(type="hidden" name='_csrf' value=`${csrfToken}`)    
            button.btn(type="submit") Signup
