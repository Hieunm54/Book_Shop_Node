extends ../../layouts/main-layout.pug

block styles 
    link(rel="stylesheet", href="/css/forms.css")
    link(rel="stylesheet", href="/css/auth.css")

block content 
    main
        if errMessage
            div.user-message.user-message--error #{errMessage}
        //- if successMessage
        //-     div.user-message.user-message--error #{successMessage}
        form.login-form(action="/reset" method="POST")
            .form-control
                label(for="email") Email
                input#email(type="email" name="email")
            input(type="hidden" name='_csrf' value=`${csrfToken}`) 
            button.btn(type="submit") Reset
