extends ../../layouts/main-layout.pug

block styles 
    link(rel="stylesheet", href="/css/forms.css")
    link(rel="stylesheet", href="/css/auth.css")

block content 
    main
        if errMessage
            div.user-message.user-message--error #{errMessage}
        //- if successMessage
        //-     div.user-message.user-message--error #{successMessage}
        form.login-form(action="/reset-password" method="POST")
            .form-control
                label(for="password") New password
                input#password(type="password" name="newPassword")
            .form-control
                label(for="password") Confirm new password
                input#password(type="password" name="cf_new_password")
            input(type="hidden" name='_csrf' value=`${csrfToken}`) 
            input(type="hidden" name='userId' value=`${userId}`)
            input(type="hidden" name='passwordToken' value=`${passwordToken}`) 
            button.btn(type="submit") Update Password
